<main class='search'>
    <!-- Search Page (Only for logged-in users) -->
    <section id='search'>
        <h2>Search by Location</h2>

        <form class='search-wrapper cf' method='get' action='/animals/search'>
            <input id='#search-input' type='text' name='search' placeholder='Search here...' required />
            <button type='submit'>Search</button>
        </form>

        <div id='search-container'>
            {{#if animals}}
                <ul class='card-wrapper'>
                    {{#each animals}}
                        <li class='card'>
                            <img src='{{this.image}}' />
                            <p>
                                <strong>Name: </strong><span class='name'>{{this.name}}</span>
                            </p>
                            <p>
                                <strong>Location: </strong><span class='location'>{{this.location}}</span>
                            </p>
                            <p><strong>Need of:</strong><span class='need-of'>{{this.need}}</span></p>
                            <a class='details-btn' href='/animals/{{this._id}}/details'>Details</a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <div id='no-post'>
                    <h2>There are no results found.</h2>
                </div>
            {{/if}}
        </div>
    </section>
</main>