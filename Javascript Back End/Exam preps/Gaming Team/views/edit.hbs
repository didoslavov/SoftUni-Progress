<main id='edit'>
    {{#if errors}}
        <div>
            <div class='errorContainer'>
                {{#each errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    {{/if}}
    <section id='edit-container'>
        <div class='edit-container-info'>
            <h1>Edit Game Code Offer</h1>
            <form action='/games/{{game._id}}/edit' method='POST'>
                <label>Platform:</label>
                <select id='platform' name='platform'>
                    <option value=''>-------</option>
                    <option value='PC'>PC</option>
                    <option value='Nintendo'>Nintendo</option>
                    <option value='PS4'>PS4</option>
                    <option value='PS5'>PS5</option>
                    <option value='XBOX' selected>XBOX</option>
                </select>
                <label>Name:</label>
                <input type='text' id='name' name='name' value='{{game.name}}' />
                <label>Image:</label>
                <input
                    type='text'
                    id='image'
                    name='image'
                    value='{{game.image}}'
                    placeholder='https://image.api.playstation.com/vulcan/ap/rnd/202208/0921/dR9KJAKDW2izPbptHQbh3rnj.png'
                />
                <label>Price:</label>
                <input type='number' id='price' name='price' value='{{game.price}}' />
                <label>Genre:</label>
                <input type='text' id='genre' name='genre' value='{{game.genre}}' />
                <label>Description:</label>
                <textarea id='description' name='description'>{{game.description}}</textarea>
                <input type='submit' id='btn' value='EDIT' />
            </form>
        </div>
    </section>
</main>